<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_bus_list"
    android:layout_width="match_parent"
    android:background="@drawable/second"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="nass.sajilobooking.server_bus_list">
    <LinearLayout
        android:id="@+id/available_buses_ll1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <EditText

            android:layout_marginTop="12dp"
            android:id="@+id/available_buses_et1"
            android:text="Enter Bus Number                  "
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorAccent"
            android:maxLines="1"/>
        <Button
            android:id="@+id/available_buses_b2"
            android:text="search"
            android:layout_marginTop="13dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ListView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv1"
        android:numColumns="auto_fit"
        android:gravity="center"

        android:columnWidth="150dp"
        android:stretchMode="columnWidth">

    </ListView>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/available_buses_b1"
        android:layout_gravity="right"
        android:text="Add new bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>

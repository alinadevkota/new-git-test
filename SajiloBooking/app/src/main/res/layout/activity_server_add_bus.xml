<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_add_bus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="nass.sajilobooking.server_add_bus">
    <TextView
        android:layout_marginTop="17dp"
        android:id="@+id/server_add_bus_tv1"
        android:gravity="center"
        android:text="Enter a New Bus"
        android:textSize="27sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/server_add_bus_ll1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/server_add_bus_tv2"
            android:text="Bus Number : "
            android:textSize="27sp"
            />
        <EditText
            android:id="@+id/server_add_bus_ed1"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ex: ba 1 kh 1234"
            android:textSize="14dp"
            android:imeActionId="@+id/login"

            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/server_add_bus_ll2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/server_add_bus_tv3"
            android:text="Date : "
            android:textSize="27sp"
            />
        <EditText


            android:id="@+id/server_add_bus_ed2"
            android:layout_marginLeft="107dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy/mm/dd"


            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/server_add_bus_ll3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/server_add_bus_tv4"
            android:text="Time : "
            android:textSize="27sp"
            />
        <EditText


            android:id="@+id/server_add_bus_ed3"
            android:layout_marginLeft="107dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hh:mm"
            android:imeActionId="@+id/login"

            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:id="@+id/server_add_bus_ll4"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/server_add_bus_b1"
            android:text="save"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/server_add_bus_b2"
            android:text="cancel"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>

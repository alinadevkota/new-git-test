<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_agency_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/confirm"
    android:orientation="vertical"

    tools:context="nass.sajilobooking.agency_confirmation">
    <LinearLayout

        android:id="@+id/agency_confirmation_ll1"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:layout_marginBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/agency_confirmation_ed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter pin code        "
            android:textSize="39dp"
            android:imeActionId="@+id/login"
            android:imeOptions="actionUnspecified"
            android:inputType="numberPassword"
            android:maxLines="1"

            android:textColor="?attr/colorButtonNormal"
            android:background="@color/colorAccent"
            android:singleLine="true" />

    </LinearLayout>
    <LinearLayout

        android:id="@+id/agency_confirmation_ll2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/agency_confirmation_ok"
            android:text="OK"
            android:layout_marginTop="13dp"
            android:textSize="25dp"
            android:layout_marginLeft="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/agency_confirmation_cancel"
            android:text="cancel"
            android:textSize="25dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
